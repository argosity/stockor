\begin{tabu} to \columnwidth{>{\hfill}p{3.4cm}ll}
\micr <%= sprintf('%s%09i%s', 'C',@payment.check_number,'C') %> & \micr A<%= @payment.bank_account.routing_number %>A & \micr C<%=@payment.bank_account.account_number %>C \\
\end{tabu}
\end{textblock}

